<UserControl x:Class="VideoMonitor.CamControll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VideoMonitor"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300" Margin="10">
    <DockPanel>
        <materialDesign:Card Padding="5">
            <StackPanel>
                <TextBox materialDesign:HintAssist.Hint="Введите название камеры" />
                <TextBox materialDesign:HintAssist.Hint="Введите адрес к камере" />
            </StackPanel>
        </materialDesign:Card>
    </DockPanel>
</UserControl>
