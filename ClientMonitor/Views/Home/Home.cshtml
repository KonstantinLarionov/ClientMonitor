@model IEnumerable<ClientMonitor.Infrastructure.Database.Entities.DataForEdit>

@{
    ViewBag.Title = "Параметры ClientMonitor";
}

<table class="table">
    <tr>
        <td>
            @using (Html.BeginForm("Stop", "Home", FormMethod.Post))
            {
                <p>
                    <input type="submit" value="Остановить выполнение приложения" />
                </p>
            }
        </td>
        <td>
            @using (Html.BeginForm("Start", "Home", FormMethod.Post))
            {
                <p>
                    <input type="submit" value="Запустить выполнение приложения" />
                </p>
            }
        </td>
    </tr>
</table>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Note</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ClientMonitor.Infrastructure.Database.Entities.DataForEdit b in Model)
        {
            <tr>
                <td>@b.Id</td>
                <td>@b.Name</td>
                <td>@b.Date</td>
                <td>@b.Value</td>
            </tr>
        }
    </tbody>
</table>



<p> Редактирование параметров</p>


    @using (Html.BeginForm("Edit", "Home", FormMethod.Post))
    {
        <p>
            <label>Название</label><br />
        <p>
            <select name="hero">
                @foreach (ClientMonitor.Infrastructure.Database.Entities.DataForEdit b in Model)
                {
                    <option value="@b.Name">@b.Name</option>
                }
            </select>
        </p>
        </p>
        <p>
            <label>Параметр</label><br />
            <input type="text" name="data" />
        </p>
        <p>
            <input type="submit" value="Отправить" />
        </p>
    }

